<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">

    <com.xintai.xhao.item.SetingItem
        android:id="@+id/seting_item1"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_marginLeft="12dp"
        android:background="#efe0f0"/>

    <com.xintai.xhao.item.SetingItem
        android:id="@+id/seting_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_marginLeft="12dp"
        android:background="#efe0f0"/>

    <com.xintai.xhao.item.SetingItem
        android:id="@+id/seting_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_marginLeft="12dp"
        android:background="#efe0f0"/>

    <com.xintai.xhao.item.SetingItem
        android:id="@+id/seting_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/exit_txt"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="16dp"
        android:clickable="true"
        android:background="@drawable/seting_item_click"
        android:textColor="#333333"
        />

</LinearLayout>